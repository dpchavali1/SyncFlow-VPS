<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
	<key>CFBundleDevelopmentRegion</key>
	<string>$(DEVELOPMENT_LANGUAGE)</string>
	<key>CFBundleExecutable</key>
	<string>$(EXECUTABLE_NAME)</string>
	<key>CFBundleIdentifier</key>
	<string>$(PRODUCT_BUNDLE_IDENTIFIER)</string>
	<key>CFBundleInfoDictionaryVersion</key>
	<string>6.0</string>
	<key>CFBundleName</key>
	<string>$(PRODUCT_NAME)</string>
	<key>CFBundlePackageType</key>
	<string>$(PRODUCT_BUNDLE_PACKAGE_TYPE)</string>
	<key>CFBundleShortVersionString</key>
	<string>1.0.0</string>
	<key>CFBundleVersion</key>
	<string>1</string>
	<key>LSMinimumSystemVersion</key>
	<string>$(MACOSX_DEPLOYMENT_TARGET)</string>
	<key>NSHumanReadableCopyright</key>
	<string>Copyright Â© 2025 SyncFlow. All rights reserved.</string>

	<!-- Privacy Usage Descriptions -->
	<key>NSCameraUsageDescription</key>
	<string>SyncFlow needs camera access to scan QR codes for pairing and for video calls.</string>
	<key>NSMicrophoneUsageDescription</key>
	<string>SyncFlow needs microphone access for voice messages and call audio.</string>
	<key>NSUserNotificationsUsageDescription</key>
	<string>SyncFlow sends notifications for new messages and incoming calls.</string>
	<key>NSScreenCaptureUsageDescription</key>
	<string>SyncFlow needs screen recording access for screen sharing during video calls.</string>
	<key>NSAppleEventsUsageDescription</key>
	<string>SyncFlow needs access to control other applications for media playback features.</string>

	<!-- App Category -->
	<key>LSApplicationCategoryType</key>
	<string>public.app-category.social-networking</string>

	<!-- App Transport Security -->
	<key>NSAppTransportSecurity</key>
	<dict>
		<!-- Allow HTTP for VPS mode - IP addresses don't work reliably with exception domains -->
		<key>NSAllowsArbitraryLoads</key>
		<true/>
		<key>NSExceptionDomains</key>
		<dict>
			<!-- VPS Server - Allow HTTP for VPS mode -->
			<key>5.78.188.206</key>
			<dict>
				<key>NSExceptionAllowsInsecureHTTPLoads</key>
				<true/>
				<key>NSExceptionRequiresForwardSecrecy</key>
				<false/>
				<key>NSIncludesSubdomains</key>
				<false/>
			</dict>
			<key>firebaseio.com</key>
			<dict>
				<key>NSIncludesSubdomains</key>
				<true/>
				<key>NSExceptionAllowsInsecureHTTPLoads</key>
				<false/>
				<key>NSExceptionRequiresForwardSecrecy</key>
				<true/>
			</dict>
			<key>googleapis.com</key>
			<dict>
				<key>NSIncludesSubdomains</key>
				<true/>
				<key>NSExceptionAllowsInsecureHTTPLoads</key>
				<false/>
				<key>NSExceptionRequiresForwardSecrecy</key>
				<true/>
			</dict>
		</dict>
	</dict>

	<!-- Hardened Runtime -->
	<key>NSSupportsAutomaticGraphicsSwitching</key>
	<true/>

	<!-- Support URLs -->
	<key>SupportEmail</key>
	<string>syncflow.contact@gmail.com</string>
	<key>SupportEmailSubject</key>
	<string>[SyncFlow Mac] Support Request</string>
	<key>PrivacyPolicyURL</key>
	<string>https://syncflow.app/privacy</string>
	<key>TermsOfServiceURL</key>
	<string>https://syncflow.app/terms</string>
</dict>
</plist>
