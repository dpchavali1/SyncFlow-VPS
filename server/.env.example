# Server
PORT=3000
WS_PORT=3001
NODE_ENV=production

# PostgreSQL
DATABASE_URL=postgresql://syncflow:PASSWORD@localhost:5432/syncflow_prod
PG_HOST=localhost
PG_PORT=5432
PG_USER=syncflow
PG_PASSWORD=your_password_here
PG_DATABASE=syncflow_prod

# Redis
REDIS_URL=redis://:PASSWORD@localhost:6379
REDIS_PASSWORD=your_redis_password_here

# JWT
JWT_SECRET=generate_a_secure_random_string_here
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# CORS
CORS_ORIGINS=http://localhost:3000,https://sfweb.app,https://www.sfweb.app

# Cloudflare TURN (WebRTC relay for video calling)
CLOUDFLARE_TURN_KEY_ID=your_turn_key_id_here
CLOUDFLARE_TURN_API_TOKEN=your_turn_api_token_here

# FCM (Firebase Cloud Messaging for push notifications)
FCM_SERVICE_ACCOUNT_PATH=./serviceAccountKey.json

# Email (Resend API for admin notifications)
RESEND_API_KEY=re_your_api_key_here
ADMIN_EMAIL=admin@example.com
